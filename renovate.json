{
  "extends": ["config:base", ":disableRateLimiting", ":rebaseStalePrs"],
  "ignorePaths": ["**/node_modules/**"],
  "npm": {
    "fileMatch": ["package\\.json$"]
  },
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "depTypeList": ["devDependencies"],
      "groupName": "dev dependencies",
      "rangeStrategy": "pin"
    }
  ]
}
