{
  "extends": ["config:base", ":disableRateLimiting"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "paths": ["generators/app/templates/_package.json"],
      "enabled": true
    },
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "depTypeList": ["devDependencies"],
      "groupName": "dev dependencies",
      "rangeStrategy": "pin"
    }
  ]
}
